
@{
    ViewBag.Title = "Carrito";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <!--Detalle Producto-->
                        <div class="col-sm-9">
                            <div class="me-2">
                                <div class="d-flex justify-content-between">
                                    <h5 class="ms-2 mt-2">Detalle de Carrito</h5>
                                    <a class="btn btn-success" href="@Url.Action("Index","Tienda")"><i class="fas fa-cart-plus"></i> Seguir Comprando</a>
                                </div>
                                <hr class="mt-2 mb-2" />
                                <div id="productos-carrito">
                                    <div class="card mb-2 card-producto">
                                        <div class="card-body">
                                            <div class="row">

                                                <div class="col-sm-2 align-self-center d-flex justify-content-center">
                                                    <img class="rounded" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" style="width:100px;height:100px" />
                                                </div>
                                                <div class="col-sm-4 align-self-center">
                                                    <span class="font-wight-bold d-block">Autor</span>
                                                    <span>Nombre Producto</span>
                                                </div>
                                                <div class="col-sm-2 align-self-center">
                                                    <span>Precio: DOP 1600</span>
                                                </div>
                                                <div class="col-sm-2 align-self-center">
                                                    <div class="d-flex">
                                                        <button class="btn btn-outline-secondary btn-restar rounded-0">
                                                            <i class="fas fa-minus"></i>
                                                        </button>
                                                        <input class="form-control input-cantidad p-1 text-center rounded-0" disabled style="width:40px" />
                                                        <button class="btn btn-outline-secondary btn-sumar rounded-0">
                                                            <i class="fas fa-plus"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                                <div class="col-sm-2 align-self-center">
                                                    <button class="btn btn-outline-danger btn-eliminar">
                                                        <i class="far fa-trash-alt"></i> Eliminar
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-end">

                                    <label class="align-self-center"><b>Total: DOP <span id="total"></span></b></label>
                                </div>

                            </div>
                        </div>
                        <!--Detalle Envio-->
                        <div class="col-sm-3">
                            <div class="card">
                                <div class="card-body bg-light">
                                    <h5 class="card-title">Detalle de Envio</h5>
                                    <form>
                                        <div class="mb-2">
                                            <label for="cboprovincia" class="form-label">Provincia: </label>
                                            <select class="form-select form-select-sm" id="cboprovincia"></select>
                                        </div>
                                        <div class="mb-2">
                                            <label for="cbomunicipio" class="form-label">Municipio: </label>
                                            <select class="form-select form-select-sm" id="cbomunicipio"></select>
                                        </div>
                                        <div class="mb-2">
                                            <label for="cbosector" class="form-label">Sector: </label>
                                            <select class="form-select form-select-sm" id="cbosector"></select>
                                        </div>
                                        <div class="mb-2">
                                            <label for="exampleInputEmail1" class="form-label">Nombre Contacto: </label>
                                            <input type="text" class="form-control form-control-sm" id="txtnombrecontacto" autocomplete="off">
                                        </div>
                                        <div class="mb-2">
                                            <label for="exampleInputEmail1" class="form-label">Direccion: </label>
                                            <input type="text" class="form-control form-control-sm" id="txtdireccion" autocomplete="off">
                                        </div>
                                        <div class="mb-2">
                                            <label for="exampleInputEmail1" class="form-label">Telefono: </label>
                                            <input type="text" class="form-control form-control-sm" id="txttelefono" autocomplete="off">
                                        </div>
                                        <div class="d-grid">
                                            <button class="btn btn-primary" type="button" onclick="RealizarPago()">
                                                <i class="fab fa-paypal"></i> Terminar y Procesar Pago Paypal
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    
    <script>

        $(document).ready(function () {

            jQuery.ajax({
                    url: '@Url.Action("ListarProductosCarrito", "Tienda")',
                    type: "POST",
                   /* data: JSON.stringify({ productoid: $(this).data("idproducto")}),*/
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (response) {
                        $("#productos-carrito").html("");

                        $("#productos-carrito").LoadingOverlay("hide");

                        $.each(response.data, function (i, item) {

                            $("<div>").addClass("card mb-2 card-producto").append(
                                $("<div>").addClass("card-body").append(
                                    $("<div>").addClass("row").append(
                                        $("<div>").addClass("col-sm-2 align-self-center d-flex justify-content-center").append(
                                            $("<img>").addClass("rounded").attr({ "src": "data:image/" + item.oProducto.Extension + ";base64," + item.oProducto.Base64 })
                                                .css({ "width": "100px", "height": "100px"})
                                        ),
                                        $("<div>").addClass("col-sm-4 align-self-center").append(
                                            $("<span>").addClass("font-wight-bold d-block").text("Autor: " + item.oProducto.oAutor.Descripcion),
                                            $("<span>").text("Titulo: " + item.oProducto.Titulo)
                                        ),
                                        $("<div>").addClass("col-sm-2 align-self-center").append(
                                            $("<span>").text(item.oProducto.Precio.toFixed(2) + " DOP" )
                                        ),

                                        $("<div>").addClass("col-sm-2 align-self-center").append(
                                            $("<div>").addClass("d-flex").append(
                                                $("<button>").addClass("btn btn-outline-secondary btn-restar rounded-0").append(
                                                    $("<i>").addClass("fas fa-minus")
                                                ),
                                                $("<input>").addClass("form-control input-cantidad p-1 text-center rounded-0").attr({ "disabled": "disabled" }).css({ "width": "40px" })
                                                    .data("oProducto", item.oProducto)
                                                    .val(item.Cantidad),
                                                $("<button>").addClass("btn btn-outline-secondary btn-sumar rounded-0").append(
                                                    $("<i>").addClass("fas fa-plus"))
                                            )
                                        ),
                                        $("<div>").addClass("col-sm-2 align-self-center").append(
                                            $("<button>").addClass("btn btn-outline-danger btn-eliminar").append(
                                                $("<i>").addClass("far fa-trash-alt"), " Eliminar"
                                            )
                                        )
                                    )
                                )
                            ).appendTo("#productos-carrito")
                        })
                        sumarTotal()
                },
                error: function (error) {
                    $("#productos-carrito").LoadingOverlay("hide");
                },
                beforeSend: function () {
                    $("#productos-carrito").LoadingOverlay("show");
                }

                });



            ListarProvincia()
        })

        function ListarProvincia() {

            $("<option>").attr({ "value": "00", "disabled": "disabled", "selected":"true" }).text("Seleccionar").appendTo("#cboprovincia")

            jQuery.ajax({
                    url: '@Url.Action("ObtenerProvincia","Tienda")',
                    type: "POST",
                   /* data: JSON.stringify({ productoid: $(this).data("idproducto")}),*/
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        if (data.lista != null) {

                            $.each(data.lista, function (i, item) {
                                $("<option>").attr({ "value": item.IdProvincia }).text(item.Descripcion).appendTo("#cboprovincia")
                            })
                            ListarMunicipio();
                        }
                    }
                });
        }

        $("#cboprovincia").on("change", function () {
            ListarMunicipio();
        })

        function ListarMunicipio() {

            $("#cbomunicipio").html("")

            $("<option>").attr({ "value": "00", "disabled": "disabled", "selected": "true" }).text("Seleccionar").appendTo("#cbomunicipio")

            jQuery.ajax({
                    url: '@Url.Action("ObtenerMunicipio","Tienda")',
                    type: "POST",
                data: JSON.stringify({ ProvinciaId: $("#cboprovincia option:selected").val() }),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        if (data.lista != null) {

                            $.each(data.lista, function (i, item) {
                                $("<option>").attr({ "value": item.IdMunicipio }).text(item.Descripcion).appendTo("#cbomunicipio")
                            })

                            ListarSector()
                        }
                    }
                });
        }

        $("#cbomunicipio").on("change", function () {
            ListarSector();
        })

        function ListarSector() {

            $("#cbosector").html("")

            $("<option>").attr({ "value": "00", "disabled": "disabled", "selected": "true" }).text("Seleccionar").appendTo("#cbosector")

            jQuery.ajax({
                    url: '@Url.Action("ObtenerSector","Tienda")',
                    type: "POST",
                data: JSON.stringify({ ProvinciaId: $("#cboprovincia option:selected").val(), MunicipioId: $("#cbomunicipio option:selected").val() }),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        if (data.lista != null) {

                            $.each(data.lista, function (i, item) {
                                $("<option>").attr({ "value": item.IdSector }).text(item.Descripcion).appendTo("#cbosector")
                            })
                        }
                    }
                });
        }

        function sumarTotal() {
            var sumaTotal = parseFloat(0)

            $("input.input-cantidad").each(function (i) {
                var precio = $(this).data("oProducto").Precio;
                var cantidad = parseFloat($(this).val())

                var subtotal = precio * cantidad;
                sumaTotal += subtotal;
            })
            $("#total").text(sumaTotal.toFixed(2))
            $("#total").data("sumatotal", sumarTotal)
        }

    </script>

    }
